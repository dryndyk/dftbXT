Geometry = GenFormat {
<<< 'device_7.gen'
}

Transport {
    Device {
      AtomRange = 1 135
      FirstLayerAtoms =  1 68
    }
    Contact {
      Id = "source"
      AtomRange = 136 271
      FermiLevel [eV] = -4.7103
      potential [eV] = 2.0
      #WriteSelfEnergy = Yes
      #ReadSelfEnergy = Yes
      #WriteSurfaceGF = Yes
      #ReadSurfaceGF = Yes
    }
    Contact {
      Id = "drain"
      AtomRange = 272 407
      FermiLevel [eV] = -4.7103
      potential [eV] = -2.0
      #WriteSelfEnergy = Yes
      #ReadSelfEnergy = Yes
      #WriteSurfaceGF = Yes
      #ReadSurfaceGF = Yes
    }
}

Hamiltonian = DFTB {
  SCC = No
  OrthonormalDevice = Yes
  MaxAngularMomentum = {
    C = "p"
    H = "s"
  }
  
  SlaterKosterFiles = Type2FileNames {
    Prefix = ""
    Separator = "-"
    Suffix = ".skf"
  }

  Eigensolver = TransportOnly{}

  Dephasing {
    #BuettikerProbes = ZeroCurrent {
    #BuettikerProbes = ZeroPotential {
    #  Coupling [eV] = constant { 0.1 }
    #}
    VibronicElastic = local { 
      AtomBlock = Yes
    #  SemiLocal = Yes
      Coupling [eV] = Constant { 0.1 }
    #  Coupling [eV] = AtomCoupling { 
    #    AtomList { Atoms = 1
    #               Value = 0.1
    #    } 
    #    AtomList { Atoms = 2 3
    #               Value = 0.01
    #    }           
    #    AtomList { Atoms = 4 5
    #               Value = 0.03
    #    }
    #  }
    #  Coupling [eV] = AllOrbitals { 0.1 0.1 0.1 0.1 0.01 0.01 0.01 0.01 0.01 0.01 0.01 0.01 0.03 0.03 0.03 0.03 0.03 0.03 #0.03 0.03}  
      MaxNumIter = 100
    }
  }
}

Analysis = {
TunnelingAndDos {
  Verbosity = 101
  EnergyRange [eV] = -6.5  -6.3
  EnergyStep [eV] = 0.1
  Region = {
    Atoms = 1:135
  }
 }
}

Options = {
  WriteAutotestTag = Yes
}

ParserOptions = {
  ParserVersion = 6
}

Parallel = {
  # Allow OMP threads explicitely to test for hybrid parallelisation with
  # MPI-binary. (Check the manual before using this in production runs!)
  UseOmpThreads = Yes
}
